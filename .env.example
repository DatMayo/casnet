# Environment Configuration Template
# Copy this file to .env and fill in your values

# Security Settings
SECRET_KEY=a_very_secret_key_that_should_be_in_an_env_file_change_this_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration (for future database implementation)
# DATABASE_URL=postgresql://username:password@localhost:5432/casnet
# DATABASE_POOL_SIZE=10
# DATABASE_ECHO=false

# Development Settings
DATA_COUNT=10
ENABLE_DETAILED_LOGGING=true
ENVIRONMENT=development

# API Configuration
API_TITLE=Casnet Backend API
API_DESCRIPTION=A multi-tenant backend API with structured error handling
API_VERSION=1.0.0
API_PREFIX=/api/v1

# CORS Settings (for frontend development)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173,http://localhost:8080,http://127.0.0.1:8080,http://localhost:4200,http://127.0.0.1:4200

# For production, use specific domains:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting (for future implementation)
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS_PER_MINUTE=100
